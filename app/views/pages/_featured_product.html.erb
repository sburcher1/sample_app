

<div class="container-fluid">
    <div class="subjumbo row">
        
        <div class="col-md-2 col-sm-1 col-xs-0"></div>
        
        <div class="col-md-4 col-sm-5 col-xs-6">
            <h2>Featured Research Option.</h2>
            <p><%= link_to @featured_product.name, @featured_product %></p>
            <img src=<%= @featured_product.image_url %> alt="Product Image" height="130" width="130">
        </div>

        <div class="col-md-4 col-sm-5 col-xs-6 text-center">
        	<h2>Latest Blog Articles</h2>
          	<% @articles.each do |article| %>
            <h4><%= link_to article.title, article %> </h4>
            <i>Published&nbsp;<%= article.created_at.strftime("%B %d %Y") %></i>
            
          <% end %>
        </div>

        <div class="col-md-2 col-sm-1 col-xs-0"></div>

    </div>
</div> 