<div class="container">
  <div class ="row">

    <div class="col-md-12">
      <h1>Research24 Blog</h1><br>
    </div>

    <div class="col-md-8">


		  <h4><%= @article.title %> </h4>
      <p><i>Published&nbsp;<%= time_ago_in_words(@article.created_at) %>&nbsp;ago</i></p>

		<p>
		  <%= @article.body.humanize %>
		</p>

		<%= link_to 'Edit', edit_article_path(@article) %> |
		<%= link_to 'Back', articles_path %>
    <br><br>


    <h4>Comments</h4>
    <% @article.comments.each do |comment| %>
    <p>
      <strong>Commenter</strong>
        <%= comment.commenter %>
    </p>
    <p>
        <%= comment.body %>
    </p>
    <i><%= link_to 'Delete Comment', [comment.article, comment],
                   method: :delete,
                   data: { confirm: 'Are you sure?' } %></i>
    <br><br>
    <% end %>


    <h4>Add New Comment</h4>

    <%= form_for ([@article, @article.comments.build]) do |f| %>
      <p>
        <%= f.label :commenter %><br>
        <%= f.text_field :commenter %>
      </p>
      <p>
        <%= f.label :body %><br>
        <%= f.text_area :body %>
      </p>
      <p>
        <%= f.submit %>
      </p>



    <% end %>

  </div>

    
    <div class="col-md-4">
    
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Most Popular&nbsp;&nbsp;<span class="glyphicon glyphicon-certificate"></span></h3>
        </div>
        <div class="panel-body">
            *to add content*
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Archives&nbsp;&nbsp;<span class="glyphicon glyphicon-book"></span></h3>
        </div>
        <div class="panel-body">
            *to add content*
        </div>
      </div>

    </div>


  </div>
</div>