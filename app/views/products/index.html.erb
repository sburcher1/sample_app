

<div class="container-fluid headerbar">
  <div class="container">
    <div class="col-md-12">
        
        <h2>Research Options</h2>

    </div>
  </div>
  </div>


<div class="container paddingtop">
    <div class="col-md-12">

      <table class="productlist">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Image url</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= link_to product.name, product %></td>
              <td><img src= <%= product.image_url %> alt="Image" height="42" width="42"></td>
            </tr>
          <% end %>
        </tbody>
      </table>


  <br>

  <%= link_to 'New Product', new_product_path %>

</div>
</div>